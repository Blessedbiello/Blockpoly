{
  "name": "blockpoly",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "anchor test",
    "test:unit": "ts-mocha -p tsconfig.json tests/blockpoly.unit.ts",
    "lint": "turbo run lint",
    "web": "pnpm --filter web dev",
    "nft:metadata": "npx ts-node --transpile-only scripts/generate-metadata.ts",
    "nft:collection": "pnpm exec esbuild scripts/create-nft-collection.ts --bundle --platform=node --outfile=/tmp/blockpoly-nft-collection.cjs --alias:@noble/hashes/sha3=@noble/hashes/sha3.js --alias:@noble/hashes/sha2=@noble/hashes/sha2.js && node /tmp/blockpoly-nft-collection.cjs"
  },
  "devDependencies": {
    "@solana/spl-token": "^0.4.14",
    "@types/bn.js": "^5.1.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.7",
    "chai": "^4.5.0",
    "esbuild": "^0.27.3",
    "litesvm": "^0.5.0",
    "mocha": "^10.8.2",
    "ts-mocha": "^10.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@metaplex-foundation/mpl-core": "1.0.2",
    "@metaplex-foundation/umi": "^0.9.2",
    "@metaplex-foundation/umi-bundle-defaults": "^0.9.2",
    "@solana/web3.js": "^1.98.0"
  },
  "packageManager": "pnpm@10.20.0"
}
